<Window x:Class="task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Date Calculator" Width="300" Height="250" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите год:"/>
            <ComboBox x:Name="YearComboBox" SelectionChanged="YearComboBox_SelectionChanged"/>

            <TextBlock Text="Выберите месяц:" Margin="0,10,0,0"/>
            <ComboBox x:Name="MonthComboBox" SelectionChanged="MonthComboBox_SelectionChanged" IsEnabled="False"/>

            <TextBlock Text="Выберите день:" Margin="0,10,0,0"/>
            <ComboBox x:Name="DayComboBox" IsEnabled="False"/>

            <Button Content="Рассчитать" Margin="0,10,0,0" Click="CalculateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
